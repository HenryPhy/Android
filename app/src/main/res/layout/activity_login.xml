<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bk"
    tools:context="com.example.qq.controller.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/default_avatar"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="用户名"
            android:layout_height="wrap_content"
            android:id="@+id/ed_login_name"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:id="@+id/ed_login_pwd"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/bt_login_regist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="注册"
        android:textSize="22dp"
        android:textColor="#f7f8f9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bt_login"
        />
        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/bt_login"/>


</LinearLayout>

</LinearLayout>
